<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/display_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/expressions_display"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#FFFFFF"
            android:ems="10"
            android:gravity="right|center_vertical"
            android:inputType="none"
            android:paddingTop="15dp"
            android:paddingRight="10dp"
            android:text="0"
            android:textSize="40sp" />

        <EditText
            android:id="@+id/result_display"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#FFFFFF"
            android:ems="10"
            android:gravity="right|top"
            android:inputType="none"
            android:paddingRight="8dp"
            android:text="=0"
            android:textSize="32sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/keys_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/keysrow_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_brackopen"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:onClick="operatorClick"
                android:text="("
                android:textSize="24sp"
                tools:layout_weight="1" />

            <Button
                android:id="@+id/button_brackclose"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:onClick="operatorClick"
                android:text=")"
                android:textSize="24sp"
                tools:layout_weight="1" />

            <Button
                android:id="@+id/button_clear"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:onClick="clearClick"
                android:text="CE"
                android:textSize="24sp"
                tools:layout_weight="1" />

            <Button
                android:id="@+id/button_delete"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:onClick="deleteClick"
                android:text="C"
                android:textSize="24sp"
                tools:layout_weight="1" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/keysrow_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:text="7"
                android:textSize="24sp"
                tools:layout_weight="1"
                android:onClick="buttonClick"/>

            <Button
                android:id="@+id/button_8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:text="8"
                android:textSize="24sp"
                tools:layout_weight="1"
                android:onClick="buttonClick"/>

            <Button
                android:id="@+id/button_9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:text="9"
                android:textSize="24sp"
                tools:layout_weight="1"
                android:onClick="buttonClick"/>

            <Button
                android:id="@+id/button_multiply"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:text="x"
                android:textSize="24sp"
                tools:layout_weight="1"
                android:onClick="operatorClick"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/keysrow_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:text="4"
                android:textSize="24sp"
                tools:layout_weight="1"
                android:onClick="buttonClick"/>

            <Button
                android:id="@+id/button_5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:text="5"
                android:textSize="24sp"
                tools:layout_weight="1"
                android:onClick="buttonClick"/>

            <Button
                android:id="@+id/button_6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:text="6"
                android:textSize="24sp"
                tools:layout_weight="1"
                android:onClick="buttonClick"/>

            <Button
                android:id="@+id/button_plus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:text="+"
                android:textSize="24sp"
                tools:layout_weight="1"
                android:onClick="operatorClick"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/keysrow_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:text="1"
                android:textSize="24sp"
                tools:layout_weight="1"
                android:onClick="buttonClick"/>

            <Button
                android:id="@+id/button_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:text="2"
                android:textSize="24sp"
                tools:layout_weight="1"
                android:onClick="buttonClick"/>

            <Button
                android:id="@+id/button_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:text="3"
                android:textSize="24sp"
                tools:layout_weight="1"
                android:onClick="buttonClick"/>

            <Button
                android:id="@+id/button_minus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:text="-"
                android:textSize="24sp"
                tools:layout_weight="1"
                android:onClick="operatorClick"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/keysrow_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_dot"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:text="."
                android:textSize="24sp"
                tools:layout_weight="1"
                android:onClick="buttonClick"/>

            <Button
                android:id="@+id/button_0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:text="0"
                android:textSize="24sp"
                tools:layout_weight="1"
                android:onClick="buttonClick"/>

            <Button
                android:id="@+id/button_divide"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:text="/"
                android:textSize="24sp"
                tools:layout_weight="1"
                android:onClick="operatorClick"/>

            <Button
                android:id="@+id/button_equals"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:onClick="equalClick"
                android:text="="
                android:textSize="24sp"
                tools:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>
</android.widget.LinearLayout>